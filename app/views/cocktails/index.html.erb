<h1>My sweet cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredients</th>
      <th>Doses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= cocktail.ingredient %></td>
        <td><%= cocktail.dose %></td>
        <td><%= link_to 'Show', cocktail %></td>
        <td><%= link_to 'Create', create_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
